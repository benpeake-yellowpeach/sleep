{% extends "components/block-wrapper.twig" %}
{% block block_content %}

{% if testimonials %}
<div class="swiper testimonial-swiper" aria-label="Testimonials Carousel" role="region">
      <div class="swiper-wrapper">
            {% for item in testimonials %}
            <div class="swiper-slide w-[327px] md:w-[608px] xl:w-[736px] rounded-lg bg-surface-primary-bg-fill-default h-auto"
                  itemscope itemtype="https://schema.org/Review">
                  <div itemprop="itemReviewed" itemscope itemtype="https://schema.org/Organization" hidden>
                        <meta itemprop="name" content="Sleep.ai">
                  </div>
                  <div
                        class="flex flex-col p-8 md:p-14 gap-6 text-text-heading-fill-primary items-center justify-center h-full">
                        <div class="size-12 rounded-full bg-full-gradient-180 p-[2px] overflow-hidden">
                              <div
                                    class="w-full h-full rounded-full {{background_color}} flex items-center justify-center">
                                    {% if item.thumbnail %}
                                    {{ responsive_img(
                                    item.thumbnail, {
                                    size: 'large',
                                    class: 'object-cover w-full h-full rounded-full',
                                    })
                                    }}
                                    {% else %}
                                    <div class="size-6 flex items-center justify-center">
                                          {% include "resources/images/icons/user.svg" %}
                                    </div>
                                    {% endif %}
                              </div>
                        </div>
                        {% if item.quote %}
                        <p class="!m-0 title-large text-text-heading-fill-primary text-center" itemprop="reviewBody">
                              {{item.quote}}
                        </p>

                        {% endif %}
                        <div class="flex flex-col gap1.5 items-center" itemprop="author" itemscope
                              itemtype="https://schema.org/Person">
                              {% if item.title %}
                              <h3 class="m-0 subtitle-large text-center" itemprop="name">
                                    {{item.title}}
                              </h3>
                              {% endif %}
                              {% if item.role %}
                              <h4 class="m-0 text-text-heading-fill-highlight-3 subtitle-large text-center">
                                    <span itemprop="jobTitle">{{ item.role }}</span>
                              </h4>
                              {% endif %}
                        </div>
                  </div>
            </div>
            {% endfor %}
      </div>
</div>
<div class="yp-container pt-10">
      <div class="swiper-pagination absolute !bottom-0 flex items-center gap-3 justify-center"></div>
</div>
{% endif %}

{% endblock %}