                  {% if not fields.show_selected %}
                  {% if color_profile == 'dark-theme' %}
                  {% set logo = item.white_company_logo %}
                  {% else %}
                  {% set logo = item.blue_company_logo %}
                  {% endif %}
                  {% else %}
                  {% set logo = item %}
                  {% endif %}

                  <li class="marquee_item_logo">
                        <img src="{{ logo.url }}" alt="{{ logo.alt }}" class="w-full h-full object-contain" />
                  </li>
                  {% endfor %}
            </ul>


      </div>

</div>


{% endif %}
{% endblock %}