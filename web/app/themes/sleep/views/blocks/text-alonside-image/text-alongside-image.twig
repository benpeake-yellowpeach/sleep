{% extends "components/block-wrapper.twig" %}
{% block block_content %}

{% if fields.contain_image %}
{% set image_classes = 'object-contain my-auto h-full w-full max-h-[380px]' %}
{% else %}
{% set image_classes = 'object-cover h-full w-full absolute inset-0' %}
{% endif %}

<div class="yp-container">
      <div class="grid grid-cols-1 xl:grid-cols-2 gap-12 md:gap-16 xl:gap-24">

            <div
                  class="col-span-1 flex flex-col gap-6 {{ fields.swap_layout ? 'order-last' : 'order-last xl:order-first' }}">
                  {% include 'components/heading.twig' with {tag: fields.tag, heading: fields.heading,
                  class:'m-0 headline-small'} %}
                  {% include 'components/content.twig' with {class: 'm-0 body-large'} %}
                  {% include "components/buttons.twig" with {buttons: fields.buttons, button_class: 'primary'} %}
            </div>

            {% if fields.image %}
            <div class="w-full relative flex h-[280px] md:h-[460px] xl:h-auto rounded overflow-hidden">
                  {{ responsive_img(
                  fields.image, {
                  size: 'large',
                  class: image_classes,
                  })
                  }}
            </div>
            {% endif %}

      </div>
</div>
{% endblock %}