{% extends "components/block-wrapper.twig" %}
{% block block_content %}
<div class="yp-container flex gap-12 md:gap-16 flex-col xl:flex-row xl:gap-24">
      <div class="flex flex-col gap-10 w-full xl:w-[480px] shrink-0 grow-0">
            <div class="flex flex-col gap-5">
                  {% include 'components/heading.twig' with {tag: fields.tag, heading: fields.heading,
                  class:'headline-small'} %}
                  {% include 'components/content.twig' with {class: 'm-0 body-small'} %}
            </div>
            {% include "components/buttons.twig" with {buttons: fields.buttons, button_class: 'primary'} %}
      </div>
      {% include "components/stats-unit.twig" %}
</div>
{% endblock %}