{% extends "components/block-wrapper.twig" %}
{% block block_content %}
<div class="simple-data-filter team-section">
      <div class="yp-container">
            <div class="flex flex-col gap-12 md:gap-16 md:items-center">

                  <div class="mx-auto max-w-[736px]">
                        {% include "components/filters-with-heading.twig" with {terms: team_terms} %}
                  </div>

                  {# Desktop #}
                  {% if team %}
                  <ul class="hidden md:grid w-full gap-sm grid-cols-1 xl:grid-cols-2">
                        {% for item in team %}
                        {% set terms = item.terms('department') %}
                        {% if terms|length %}
                        {% set term = terms[0] %}
                        {% endif %}
                        {% include "components/team-card.twig" with {item: item} %}
                        {% endfor %}
                  </ul>
                  {% endif %}

            </div>
      </div>
      {# Mobile #}
      {% if team %}
      <div class="yp-container overflow-visible block md:hidden pt-12">
            <div class="swiper team-swiper overflow-visible">
                  <ul class="pl-0 swiper-wrapper flex">
                        {% for item in team %}
                        {% set terms = item.terms('department') %}
                        {% if terms|length %}
                        {% set term = terms[0] %}
                        {% endif %}
                        {% include "components/team-card.twig" with {item: item} %}
                        {% endfor %}
                  </ul>
                  <div class="yp-container pt-[60px] md:pt-[78px]">
                        <div class="swiper-pagination absolute !bottom-0 flex items-center gap-3 justify-center"></div>
                  </div>
            </div>
      </div>
      {% endif %}
</div>
{% endblock %}