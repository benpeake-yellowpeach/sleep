{% extends "base/base.twig" %}

{% block body %}
    <div>
        <div class="container">
            <h3 class="text-primary fw-bold">Search results for "{{ searched_for }}"</h3>
        </div>
    </div>
    <div class="band-large">
        <div class="container">

            {% for item in posts %}
                <div class="col-12 col-md-6 col-lg-4">
                    {% include "components/search-item.twig" with {index:index} %}
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}
